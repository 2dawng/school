{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/python/ltm/server.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/python/ltm"
        },
        {
            "name": "Debug Client",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/python/ltm/client.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/python/ltm"
        },
        {
            "name": "Debug Client Text Format",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/python/ltm/client_text_format.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/python/ltm"
        },
        {
            "name": "Debug Client UUID",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/python/ltm/client_uuid.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/python/ltm"
        },
        {
            "name": "Debug Client Multi-threaded",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/python/ltm/client_multi_threaded.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/python/ltm"
        },
        {
            "name": "Debug Client Simple",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/python/ltm/client_simple.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/python/ltm"
        },
        {
            "name": "Debug Chat Client Interactive",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/python/ltm/client_chat_interactive.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/python/ltm"
        },
        {
            "name": "Debug Chat Client Auto",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/python/ltm/client_chat_auto.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/python/ltm"
        },
        {
            "name": "Flask: ANM Login (Port 4500)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/python/anm/10.09.1.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/python/anm",
            "env": {
                "FLASK_APP": "10.09.1.py",
                "FLASK_ENV": "development"
            },
            "justMyCode": true
        },
        {
            "name": "ANM: Dictionary Attack",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/python/anm/10.09.2.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/python/anm",
            "justMyCode": true
        },
        {
            "name": "ANM: Dictionary Attack with IP Rotation",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/python/anm/10.09.3.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/python/anm",
            "justMyCode": true
        },
        {
            "name": "Flask: File Upload App (Port 5000)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/python/ltm/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/python/ltm",
            "env": {
                "FLASK_APP": "main.py",
                "FLASK_ENV": "development"
            },
            "justMyCode": true
        }
    ],
    "compounds": [
        {
            "name": "Debug Server & Client",
            "configurations": [
                "Debug Server",
                "Debug Client"
            ],
            "stopAll": true
        },
        {
            "name": "Debug Server & Text Format Client",
            "configurations": [
                "Debug Server",
                "Debug Client Text Format"
            ],
            "stopAll": true
        },
        {
            "name": "Debug Server & UUID Client",
            "configurations": [
                "Debug Server",
                "Debug Client UUID"
            ],
            "stopAll": true
        },
        {
            "name": "Debug Server & Multi-threaded Client",
            "configurations": [
                "Debug Server",
                "Debug Client Multi-threaded"
            ],
            "stopAll": true
        },
        {
            "name": "Debug Server & Simple Client",
            "configurations": [
                "Debug Server",
                "Debug Client Simple"
            ],
            "stopAll": true
        },
        {
            "name": "Debug Chat Server & Interactive Client",
            "configurations": [
                "Debug Server",
                "Debug Chat Client Interactive"
            ],
            "stopAll": true
        },
        {
            "name": "Debug Chat Server & Auto Client",
            "configurations": [
                "Debug Server",
                "Debug Chat Client Auto"
            ],
            "stopAll": true
        }
    ]
}